<%  include ../partials/header %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h2>wellcome to yelp camp </h2>
			<p>all the campgrounds are hande picked by our valuabile costumers</p>
			<P><a class="btn btn-primary" href="/campgrounds/new">Add new campgrounds</a></P>
		</div>
	</header>

	<div class="row" style="display:flex; flex-wrap: wrap;">
			<% campgrounds.forEach(function(campground){ %>
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail">
						<img src= "<%= campground.image %>" width="500px">
						<div class="caption">
							<h3><%= campground.name %></h3>
							<span class="badge badge-secondary">Subreddit:4</span>
                    		<span class="badge badge-dark">Score:4</span>
						</div>
						<div> <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"> Show More</a></div>
					</div>
				</div>
			<% }); %>
	</div>

</div>

<%  include ../partials/footer %>
