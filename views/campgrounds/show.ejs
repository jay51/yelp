<%  include ../partials/header %>

<div class="container">
    <div class="row">
        <!--side bar-->
        <div class="col-md-3">
            <p class="lead"> Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active"> option</li>
                <li class="list-group-item"> option</li>
                <li class="list-group-item"> option</li>
            </div>
            <h2>map goes here</h2>
        </div>
        <!--campground-->
        <div class="col-md-9">
            <div class="thumbnail"> 
                <img class="img-responsive" src="<%= foundCampground.image %>">
                <div class="caption">
                    <h4 class="pull-right"> 9.00/night</h4>
                    <h4> <a><%= foundCampground.name %></a> </h4>
                    <hr/>
                    <div> <%= foundCampground.description %> </div>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a href="/campgrounds/<%= foundCampground._id %>/comments/new" class="btn">New Comment</a> 
                    <hr/>
                </div>
                <!--comments-->
                <div>
                    <% foundCampground.comments.forEach( ( comment ) => { %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong> <%= comment.author %> </strong>
                                <span class="pull-right"> 10 days ago </span>
                                <p> <%= comment.text %> </p>
                            </div>
                        </div>
                        <hr/>
                    <% });%>
                    
                </div>

            </div>
           
        </div>
        
    </div>
</div>


<%  include ../partials/footer %>