<%  include ../partials/header %>


<h1> <%= foundCampground.name %> </h1>

<div>
    <img src="<%= foundCampground.image %>">
    <div> <%= foundCampground.description %> </div>
</div>

<div>
    <% foundCampground.comments.forEach( ( comment ) => { %>
        <p> 
        <strong><%= comment.author %></strong> - <%= comment.text %>
        </p>
    
    <% });%>
     <a href="/campgrounds/<%= foundCampground._id %>/comments/new" class="btn btn-primary">New Comment</a>
</div>


<%  include ../partials/footer %>